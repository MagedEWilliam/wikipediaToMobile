{
  "manifest_version": 2,
  "name": "Wiki2Mobile",
  "version": "1.0",
  "description": "This extension will switch automatically to a the mobile site of wikipedia",
  
   "icons": {"48": "icon.png"},

  "browser_action": {
   "default_icon": "icon.png"
  },

  "background": {
    "persistent": false,
    "scripts": ["popup.js"]
  },

  "permissions": ["tabs", "https://*.wikipedia.org/"]
}